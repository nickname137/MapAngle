{
  "manifest_version": 3,
  "name": "MapAngle",
  "version": "1.1",
  "description": "Easily measure azimuth angles directly on Google Maps.",
  "action": {
    "default_title": "Activate Movable Image"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["360b.png","360w.png"],
      "matches": ["https://www.google.com/*"]
    }
  ]
}


